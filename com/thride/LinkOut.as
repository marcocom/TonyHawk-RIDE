package com.thride{		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;		import flash.events.Event;		import flash.text.TextField;	import flash.text.TextFieldAutoSize;		import flash.net.URLRequest;	import flash.net.navigateToURL;		import flash.geom.Rectangle;		import gs.TweenLite;	import gs.easing.*;	//TweenLite.to(mc, 1, {x:46, y:43, scaleX:1, scaleY:1, rotation:0, alpha:1, tint:0x3399ff, ease:Elastic.easeOut, onComplete:FunctionName });			public class LinkOut extends Sprite	{				private var closeBut:Sprite;		private var copyTxt:TextField;		private var urlTxt:TextField;		private var hitClip:Sprite;				private var xmlList:XMLList;		private var url:String;				private var killFunc:Function;		private var trackFunc:Function;				public function LinkOut($xml:XMLList, $url:String, $kill, $track)		{			addEventListener(Event.ADDED_TO_STAGE, onAdded);			xmlList = $xml;			url = $url;			killFunc = $kill;			trackFunc = $track;		}				private function init()		{			copyTxt.htmlText = xmlList.title.valueOf();			urlTxt.htmlText = xmlList.subtitle1.valueOf()+"\n<font color=\"#D60000\">"+url+"</font>\n "+xmlList.subtitle2.valueOf();			urlTxt.y = copyTxt.y + copyTxt.textHeight + 15;			hitClip.y = urlTxt.y;			hitClip.height = urlTxt.textHeight;			hitClip.addEventListener(MouseEvent.CLICK, linkAction);			hitClip.buttonMode = true;			closeBut.addEventListener(MouseEvent.CLICK, closeAction);			closeBut.buttonMode = true;		}				private function closeAction(e:Event)		{			killFunc();			//this.parent.removeChild(this);			//delete this;		}				private function linkAction(e:Event)		{			trackFunc(url);			//navigateToURL(new URLRequest(url), "_blank");			closeAction(null);		}				private function onAdded(e:Event)		{			addEventListener(Event.REMOVED_FROM_STAGE, onRemoved);			closeBut = getChildByName("closebut") as Sprite;			copyTxt = getChildByName("copytxt") as TextField;			urlTxt = getChildByName("urltxt") as TextField;			hitClip = getChildByName("hit") as Sprite;						init();		}				private function onRemoved(e:Event)		{								}			}}