package com.thride.register {		import flash.display.MovieClip;	import flash.geom.ColorTransform;	import flash.text.TextField;	import flash.text.TextFormat;		/**	 * ...	 * @author David Barlia	 */	public class FormField extends MovieClip {				// on-stage		public var textField:TextField;		public var box:MovieClip;				private var format:TextFormat;		private var _valid:Boolean;		private var invalidTint:ColorTransform;		private var noTint:ColorTransform;		private var _restrict:String;				public function FormField() {			format = textField.defaultTextFormat;			textField.text = "";			textField.setTextFormat(format);		}				public function get valid():Boolean {			return _valid;		}				public function set valid(value:Boolean):void {			_valid = value;						if (invalidTint == null) {				invalidTint = new ColorTransform(0.8, 0.8, 0.8, 1, 64, -64, -64, 0);				noTint = new ColorTransform();			}						box.transform.colorTransform = _valid ? noTint : invalidTint;		}				public function set password(value:Boolean):void {			textField.displayAsPassword = value;		}				public function get password():Boolean {			return textField.displayAsPassword;		}				public function get value():String { return textField.text; }				public function set value(value:String):void {			textField.text = value;		}				public function get restrict():String { return textField.restrict; }				public function set restrict(value:String):void {			textField.restrict = value;		}			}}